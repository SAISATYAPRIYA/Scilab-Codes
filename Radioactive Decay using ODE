//RADIOACTIVE DECAY USING ODE
t=[0:0.5:100];        
to=0;
No=100;        //Initial Nucleus
lambda=0.05;    //Decay constant
function dN=f(t,N)        //dn/dt = -lambda*n
    dN=-lambda*N
endfunction;
N=ode(No,to,t,f);        
plot(t,N,'--r');
xgrid(1,1,1);
legend(["Radioactive Decay"]);
xlabel("Time");
ylabel("Number of Nuclei");
